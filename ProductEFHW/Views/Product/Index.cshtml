@model List<Product>
@if (Model.Count > 0)
{
    <a class="btn btn-outline-success" asp-controller="Product" asp-action="Add">Add Product</a>

    <div class="row row-cols-1 row-cols-md-4 g-4" style="margin-top:10px;">
        @foreach (var item in Model)
        {
            <div class="col mb-4 ml-2">
                <div class="card" style="width: 16rem;">
                    <img src="@item.ImageUrl" class="card-img-top" alt="image">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.Price</p>
                        <p class="card-text">@item.Category.Name</p>
                        <a asp-action="Show" asp-route-id="@item.Id" class="btn btn-secondary">Show</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1>Empty</h1>
    <a class="btn btn-outline-success" asp-controller="Product" asp-action="Add">Add Product</a>
}
